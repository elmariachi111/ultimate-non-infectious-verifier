{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "tsconfig.json"
  ],
  "files": [
    "./src/index.ts"
  ]
}