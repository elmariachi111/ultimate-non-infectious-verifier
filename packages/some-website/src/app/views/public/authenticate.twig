{% extends "../scaffold.twig" %}

{% block body %}
	<section class="section">
		<p class="block">
			This website allows you to authenticate using DIDs and signatures,
			and authorize yourself by presenting Verifiable credentials.
		</p>
		<p class="block">To prove control over your DID, send us your DID &amp; a signature about this nonce:</p>
		<code class="is-size-4">
			{{ nonce }}
		</code>
	</section>
	<section class="section">

		<form method="post" action="{{auth_url}}">
			<div class="field">
				<label class="label" for="did">Your DID</label>
				<div class="control">
					<input name="did" type="text" placeholder="your DID">
				</div>
			</div>

			<div class="field">
				<label class="label" for="signature">Your base58 signature of
					<code>{{nonce}}</code>
				</label>
				<div class="control">
					<textarea name="signature" class="textarea" placeholder="the base58 encoded signature"></textarea>
				</div>
			</div>

			<div>
				<button class="button is-primary" type="submit">authenticate!</button>
			</div>
		</form>

	</section>
{% endblock %}
