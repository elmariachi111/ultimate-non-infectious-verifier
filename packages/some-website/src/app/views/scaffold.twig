<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
	</head>
	<body>
		<section class="hero is-primary is-bold">
			<div class="hero-body">
				<div class="container">
					<div class="is-flex is-flex-direction-row is-align-items-center is-justify-content-space-between">
						<div class="is-flex">
							<h2 class="title">DID based authentication and authorization</h2>
						</div>

						<a href="/secret" class="is-flex button is-link is-light">visit secret page</a>
						{% if session.did %}
							<a href="/logout" class="is-flex button is-link is-light">logout</a>
						{% endif %}
					</div>
				</div>
			</div>
		</section>

		{% for msg in messages %}
			<div class="notification is-info">
				{{ msg }}
			</div>
		{% endfor %}

		{% block body %}{% endblock %}
	</body>
</html></body></html>
